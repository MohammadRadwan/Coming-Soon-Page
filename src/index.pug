doctype
html(lang="en")
    head
        //- Start Meta
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name = "description", content="Coming-Soon Page Project Using (Gulp, Pug, CSS3, SASS, Bootstrap, JQuery, and Fully-Responsive)")
        //- End Meta
        //- Start Title
        title Coming-Soon Page
        //- End Title
        //- Start Styles
        include pug/includes/styles
        //- End Styles
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="js/vendors/html5shiv.min.js"></script>
            <script src="js/vendors/respond.min.js"></script>
        <![endif] -->
    body
        //- Overlay
        .overlay
        //- White Small Dots
        .background-dots
        //- Colorful Dots
        #particles-js
            canvas(class="particles-js-canvas-el" style="width: 100%; height: 100%;")

        //- Start Wrapper
        .page-wrapper
            //- Start Main Content
            main
                .container
                    .row
                        .col-sm-12
                            .content
                                .head
                                    h1
                                        span(class="name text-white") GJeans is
                                        span(class="title overflow-hidden")  Coming Soon...
                                    p.subtitle Gjeans's has all the original international brands of jeans.
                                .form
                                    form.form-inline
                                        .form-group
                                            input(type="email" class="form-control form-email" placeholder="Enter your email address")
                                            button(class="form-submit btn btn-primary") Get Notified!
                                .social-buttons
                                    ul(class="list-unstyled d-inline-flex m-0")
                                        li
                                            button(type="button" class="btn btn-fb")
                                                a(href="#")
                                                    i(class="fa fa-facebook")
                                                    | Facebook
                                        li
                                            button(type="button" class="btn btn-in")
                                                a(href="#")
                                                    i(class="fa fa-instagram")
                                                    | Instagram
                                        li
                                            button(type="button" class="btn btn-lc")
                                                a(href="#")
                                                    i(class="fa fa-map-marker")
                                                    | Location
                                .contact-info
                                    ul(class="list-unstyled d-block")
                                        li
                                            .left
                                                i(class="fa fa-envelope")
                                                label(for="email") Email:
                                            span#email gjeans@gmail.com
                                        li
                                            .left
                                                i(class="fa fa-phone")
                                                label(for="phone") Phone:
                                            span#phone +1112223334455
            //- End Main Content

            //- Start Footer
            include pug/layouts/footer
            //- End Footer

        //- Start Scripts
        include pug/includes/scripts
        //- End Scripts